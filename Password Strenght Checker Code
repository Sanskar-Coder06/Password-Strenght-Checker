password = input("Enter your password: ")

score = 0

has_number = False

for num in password:
    if num.isdigit():
        has_number = True
        break

if has_number:
    score += 1

else:
    print("Password Must Include Atleast One Number.")

has_alpha = False

for alpha in password:
    if alpha.isalpha():
        has_alpha = True
        break

if has_alpha:
    score += 1

else:
    print("Password Must Include Atleast One Alphabet.")

has_upper = False

for upper in password:
    if upper.isupper():
        has_upper = True
        break

if has_upper:
    score += 1

else:
    print("Password Must Include Atleast One Upper Case Letter.")

has_lower = False

for lower in password:
    if lower.islower():
        has_lower = True
        break

if has_lower:
    score += 1

else:
    print("Your Password Contains Atleast One Lower case Letter.")

special_character = "!@#$%^&*()_+"

has_special = False

for char in password:
    if char in special_character:
        has_special = True
        break

if has_special:
    score += 1

else:
    print("Your Password Contains Atleast One Special Charater")


if (len(password)) >= 8:
    score += 1

else:
    print("Minimum 8 Character Long Password Required")

print("You Got",score,"Out Of 6")
